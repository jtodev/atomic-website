---
import Base from '../layouts/Base.astro';
import Card from '../components/Card.astro';
---


<Base title="Hallo">
	<main>

		<h1 class="center">Atomic</h1>
		<h2 class="center">Das Studi-Caf√© im EW 021</h2>

		<p class="hot">
			Wilde Neuigkeiten!
		</p>

	</main>
</Base>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: black;
		font-size: 20px;
		line-height: 1.6;
	}
	.logo {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.hot {
		color: white;
		margin-bottom: 2rem;
		border: solid #23262d;
		background: var(--accent-gradient);
		padding: 1.5rem;
		border-radius: 8px;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
